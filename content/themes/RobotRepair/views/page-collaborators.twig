{% extends "base.twig" %}

{% block content %}
	<section id="collaborator" role="main" class="wrap">
		 <div class="row">
		 	{% set counter = 0 %}
		 	{% for item in post.get_field('collaborator') %}
		 		{% set counter = counter + 0 %}
	            <article class="friend"> 
                    <figure>
                    	{% if item.collaborator_image %}
                        	<img src="{{TimberImage(item.collaborator_image).src|resize(425, 425, 'center')}}"/>
                        {% else %}
                        	<img src="http://placehold.it/425">
                        {% endif %}
                        <div>
                            <figcaption>
                                <h4>{{ item.collaborator_name }}</h4>
                            </figcaption>
                        </div>
                    </figure>  
                    {% if item.collaborator_image %}
                    	<div class="grow">
				        	<div class="friend-wrap">
				        		<img src="{{TimberImage(item.collaborator_image).src|resize(425, 425, 'center')}}"/>			   
				        		<div class="friend-header">
				        			<h4>{{ item.collaborator_name }}</h4>
				        			<div class="friend-tracks">
				        				{% for tracks in item.collaborator_rep %}
				        					{% set counter = counter + 1 %}
											<div id="jplayer-audio-{{ counter }}" class="jp-jplayer" data-url="{{tracks.collaborator_tracks}}"></div>

							                <div id="jp-container-audio-{{ counter }}" class="jp-flat-audio collab" role="application" aria-label="media player">
							                    <div class="jp-play-control jp-control">
							                        <button class="jp-play jp-button" role="button" aria-label="play" tabindex="0"></button>
							                    </div>
							                      
							                    <div class="jp-no-solution">
							                        Media Player Error<br />
							                        Update your browser or Flash plugin
							                    </div>
							                </div> 
										{% endfor %}
				        			</div>
				        		</div>
				        		<div class="friend-desc">
				            		<p>{{ item.collaborator_bio }}</p> 
				            		{% if item.collaborator_link %}
				            			<button onclick="window.open('{{ item.collaborator_link }}')">Link</button>
				            		{% endif %}
				            	</div>
				            </div>     
				        </div>
				     {% endif %} 
	            </article>
	        {% endfor %}
	      
        </div>
	</section>
{% endblock %}

