{% extends "base.twig" %}

{% block content %}
    <div class="loader"></div>
	<section id="home" class="wrap">
        <div class="row">
            <div class="block large">
              <figure>
                <a href="{{post.get_field('link_to_1')}}">
                    <div class="slider">
                    	{% set work = post.get_field('work-slides') %}
                		{% for image in work %}
                            <div data-rsDelay="{{post.get_field('speed_slideshow_1')}}">
                    		  <img class="rsImg" src="{{TimberImage(image.id).get_src|resize(640, 360, 'center')}}" alt="{{image.title}}">
                            </div>
                    	{% endfor %}
                    </div>
                    <div class="caption">
                        <figcaption>
                            <h2>{{post.get_field('title_1')}}</h2>
                        </figcaption>  
                    </div>
                </a>
              </figure>
            </div>
            <div class="block">
                <div class="y-two">
                   <figure>
                        <a href="{{post.get_field('link_to_2')}}">
                            <div class="slider">  
                             {% set contact = post.get_field('contact_slides') %}  
                               {% for image in contact %}
                                    <div data-rsDelay="{{post.get_field('speed_slideshow_2')}}">
                            		  <img class="rsImg" src="{{TimberImage(image.id).get_src|resize(320, 180, 'center')}}" alt="{{image.title}}">
                                    </div>
                            	{% endfor %}       
                            </div>
                            <div class="caption">
                                <figcaption>
                                    <h2>{{post.get_field('title_2')}}</h2>
                                </figcaption>  
                            </div>
                        </a>
                    </figure>
                </div>
                <div class="y-two">
                   <figure>
