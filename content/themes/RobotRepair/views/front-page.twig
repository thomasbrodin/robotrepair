                        </a>
                    </figure>
                </div>
            </div>
            <div class="block large">
                <a href="{{post.get_field('external_link_2')}}" target="_blank">
	                <div class="slider">  
	                	{% set last = post.get_field('large_slides') %}           
	                      	{% for image in last %}
                                <div data-rsDelay="{{post.get_field('speed_slideshow_6')}}">
	                    		     <img class="rsImg" src="{{TimberImage(image.id).get_src|resize(640, 360, 'center')}}" alt="{{image.title}}">
                                </div>
	                    	{% endfor %}
	                </div>
                </a>
            </div>
        </div>
    </section>
{% endblock %}