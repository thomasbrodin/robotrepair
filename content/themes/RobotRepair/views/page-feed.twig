<!doctype html>
<!--[if lt IE 7]><html class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" {{site.language_attributes}}> <![endif]-->
<!--[if IE 7]><html class="no-js ie ie7 lt-ie9 lt-ie8" {{site.language_attributes}}> <![endif]-->
<!--[if IE 8]><html class="no-js ie ie8 lt-ie9" {{site.language_attributes}}> <![endif]-->
<!--[if gt IE 8]><!--><html class="no-js" {{site.language_attributes}}> <!--<![endif]-->
<head>
    <meta charset="{{site.charset}}" />
        <title>   
            {% if wp_title %}
                {{ wp_title }} - {{ site.name }}
            {% else %}
                {{ site.name }}
            {% endif %}
        </title>
    <meta name="description" content="{{site.description}}">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="apple-touch-icon" href="{{theme.uri}}/img/apple-touch-icon.png">
    <link rel="icon" href="{{theme.uri}}/favicon.ico">
    <script src="//use.typekit.net/oqf3pmp.js"></script>
    <script>try{Typekit.load();}catch(e){}</script>
    {{function('wp_head')}}

	<body class="{{body_class}}">
		
		<!-- header -->
		<header>
		    <div class="topnav">  
		        <h1 class="name">
		            <a href="/">{{bloginfo('name')}}</a><span class="title">{{post.title}}</span>
		        </h1>
		        <div id="trigger-overlay">
		            <i class="hamburger"></i>
		        </div><!-- menu-button-->       
		    </div>
		    <!-- overlay nav -->
		    <div class="subnav">
		    	{% set parent = TimberPost(post.parent) %}
		        <ul class="work">
		        	{% for item in work_main.get_items %}
		        		<li class="nav-main-item{{item.current ? ' active'}}">
		        			<a href="{{item.get_path}}">{{item.title}}</a>        
		        		</li>
		            {% endfor %}
		        </ul>
		         <ul class="work-sub">
		        	{% for item in work_sub.get_items %}
		        		<li class="nav-main-item{{item.current ? ' active'}}">
		        			<a href="{{item.get_path}}">{{item.title}}</a>        
		        		</li>
		            {% endfor %}
		        </ul>
		    </div>
		</header>
		<!-- overlay nav -->
	    <div id="brand-platform" role="navigation" class="overlay">
	      <div class="inner">
	        <nav>
	           <ul id="menu-main-nav" class="nav"> 
	           	{% for item in menu.get_items %}
	           		<li class="nav-main-item{{item.current ? ' active'}}">
	           			<a href="{{item.get_path}}">{{item.title}}</a>        
	              	</li>
	        	{% endfor %}
	           </ul>
	        </nav>

		        <div class="logo-wrap">
		            <div class="logo-inner">
		            <a href="/"><img src="{{theme.uri}}/img/robot-repair.png"/></a>
		            <p class="tagline"><em>{{site.description}}</em></p>
		          </div>
		        </div>
	    	</div>
	    </div>
		
		<!-- Feed section -->
		<div class="loader"></div>
		<section id="feed" class="wrap" data-api-url="{{apiUrl}}">
			
		</section>
		
		<!-- Videos Overlay -->
		<section id="inline">
			<div class="fancy-wrap" id="popup">
				<img class="logo-fancy" src="{{theme.uri}}/img/robot-repair.png"/>
	          
	        </div>
        </section>

		<script src="{{theme.uri}}/js/work.min.js"></script>
		<script>
		  videojs.options.flash.swf = "{{theme.uri}}/js/video-js.swf"
		</script>
		<script>
		  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

		  ga('create', 'UA-9862372-1', 'auto');
		  ga('send', 'pageview');

		</script>

	</body>
</html>
