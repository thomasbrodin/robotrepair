{% extends "base.twig" %}

{% block content %}
	<section id="best-tracks" role="main" class="full-width">

		<div class="jp-container-playlist" role="application" aria-label="media player">
			<div class="jp-type-playlist">
				<div id="top-tracks"></div>
				<div class="jp-playlist">
					<ul class="jp-flat-audio">
							<li>&nbsp;</li>
					</ul>
				</div>
			</div>
		</div>
		<div class="bottom-row">
			<div class="inner">
				<div id="jp-container-audio" class="jp-flat-audio gui" role="application" aria-label="media player">
						<div class="jp-play-control jp-control">
								<button class="jp-play jp-button" role="button" aria-label="play" tabindex="0"></button>
								<button class="jp-pause jp-button" role="button" aria-label="pause" tabindex="0"></button>
								<button class="jp-next jp-button" role="button" aria-label="next" tabindex="0"></button>
								<button id="shuffle" class="jp-shuffle jp-button" role="button" tabindex="0"></button>
						</div>
						<div class="jp-details">
							<div class="jp-title" aria-label="title">&nbsp;</div>
							<div class="jp-current-time" role="timer" aria-label="time">&nbsp;</div>
						</div>

						<div class="jp-no-solution">
								Media Player Error<br />
								Update your browser or Flash plugin
						</div>
				</div>
				<div class="download-all">
					<a target="_blank" href="{{post.get_field('download_all')}}">DOWNLOAD ALL</a>
				</div>

			</div>
		</div>

	</section>

	<script>
		var rrPlaylist = {{post.get_field('tracks')|json_encode()|replace({'track':'mp3'})}};
	</script>

{% endblock %}
